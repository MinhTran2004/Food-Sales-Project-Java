<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:backgroundTint="#181a20"
    android:background="@drawable/inputlogin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/inputlogin"
        android:backgroundTint="#1f222a"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_product_horizon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/ten_product_horizon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Tên sản phẩm"/>

        <TextView
            android:id="@+id/theloai_product_horizon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="hamburger"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gia_product_horizon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1bac4b"
                android:textSize="19dp"
                android:textStyle="bold"
                android:text="$ 20.000"/>

            <TextView
                android:id="@+id/luotmua_product_horizon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/white"
                android:text="Đã mua: 20"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>