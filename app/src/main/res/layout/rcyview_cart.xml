<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/inputlogin"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_Product_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ten_Product_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Tên sản phẩm"/>
            <TextView
                android:id="@+id/theloai_Product_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Hamburger"/>

            <TextView
                android:id="@+id/gia_Product_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#1bac4b"
                android:text="$ 20.000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_cart_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>